{
  "private": true,
  "scripts": {
    "format:packages": "prettier --write 'packages/**/*.{js,jsx,ts,tsx,json,md,mdx}'",
    "format": "npm run format:packages",
    "lint:packages": "eslint 'packages/**/*.{js,jsx,ts,tsx}'",
    "lint": "npm run lint:packages",
    "prepare": "husky install && npm run resolve-deps",
    "prebuild": "npm run resolve-deps",
    "resolve-deps": "rimraf ./node_modules/@types/react",
    "build": "run-p build:*",
    "build:docs": "npm run --workspace ./docs build",
    "build:examples": "npm run --workspace ./examples/vue2 build",
    "build:wiz-ui": "npm run --workspace ./packages/wiz-ui build",
    "dev": "run-p dev:*",
    "dev:examples": "npm run --workspace ./examples/vue2 dev",
    "dev:wiz-ui": "npm run --workspace ./packages/wiz-ui dev",
    "dev:docs": "npm run --workspace ./docs dev",
    "test": "run-p test:*",
    "test:wiz-ui": "npm run --workspace ./packages/wiz-ui test",
    "test:ci": "run-p test:ci:*",
    "test:ci:wiz-ui": "npm run --workspace ./packages/wiz-ui test:ci"
  },
  "lint-staged": {
    "*.{js,ts,vue}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "workspaces": [
    "packages/*",
    "examples/*",
    "docs"
  ],
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.42.1",
    "@typescript-eslint/parser": "^5.42.1",
    "eslint": "^8.27.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "eslint-plugin-vue": "^9.7.0",
    "husky": "^8.0.2",
    "lint-staged": "^13.0.3",
    "npm-run-all": "^4.1.5",
    "playwright": "^1.27.1",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2"
  }
}
