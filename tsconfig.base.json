{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "preserve",
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "paths": {
      "@wizleap-inc/*": ["packages/*"]
    }
  },
  "exclude": [
    "**/node_modules",
    "**/dist",
    "**/coverage",
    "**/storybook-static"
  ]
}
