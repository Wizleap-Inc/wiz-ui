{
  "name": "@wizleap-inc/wiz-ui",
  "version": "2.8.0",
  "description": "A Vue2 UI Framework for Wizleap Inc.",
  "scripts": {
    "build": "vue-tsc --noEmit && vite build",
    "dev": "pnpm storybook:dev",
    "test": "run-p test:unit storybook:test",
    "check:lib-publish": "can-npm-publish --verbose",
    "test:unit": "vitest run",
    "storycap": "storycap --serverTimeout 100000 --captureTimeout 30000 --serverCmd \"npx serve -l 6006 storybook-static\" http://localhost:6006",
    "storybook:build": "NODE_OPTIONS=--max_old_space_size=4096 storybook build",
    "storybook:dev": "storybook dev -p 6006",
    "storybook:test": "concurrently -k -s first -n \"SB,TEST\" -c \"magenta,blue\" \"NODE_OPTIONS=--max_old_space_size=4096 storybook build --quiet && npx http-server storybook-static --port 6006 --silent\" \"wait-on tcp:6006 && test-storybook --url http://localhost:6006\""
  },
  "devDependencies": {
    "@vitejs/plugin-vue2": "^2.2.0",
    "unplugin-vue-define-options": "^1.0.2",
    "@storybook/vue": "7.0.2",
    "@storybook/vue-vite": "^7.0.2",
    "vue-tsc": "^1.0.9"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/wizleap-inc/wiz-ui.git"
  },
  "license": "CC-BY-NC-SA-4.0",
  "author": "Wizleap Inc.",
  "files": [
    "dist"
  ],
  "main": "./dist/wiz-ui.umd.js",
  "module": "./dist/wiz-ui.es.js",
  "types": "./dist/index.d.ts",
  "dependencies": {
    "@wizleap-inc/wiz-ui-constants": "workspace:*",
    "@wizleap-inc/wiz-ui-styles": "workspace:*",
    "@wizleap-inc/wiz-ui-utils": "workspace:*",
    "portal-vue": "^2.1.7",
    "vue": "^2.7.13",
    "vue-router": "^3.6.5"
  }
}
