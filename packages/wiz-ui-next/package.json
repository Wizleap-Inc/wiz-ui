{
  "name": "@wizleap-inc/wiz-ui-next",
  "version": "1.0.4",
  "description": "A Vue3 UI Framework for Wizleap Inc.",
  "scripts": {
    "build": "run-p build:*",
    "build:lib": "vue-tsc --noEmit && vite build",
    "build:storybook": "NODE_OPTIONS=--max_old_space_size=4096 storybook build",
    "check:lib-publish": "can-npm-publish --verbose",
    "dev": "run-p dev:*",
    "dev:storybook": "storybook dev -p 6007",
    "test": "run-p test:storybook",
    "test:storybook": "concurrently -k -s first -n \"SB,TEST\" -c \"magenta,blue\" \"NODE_OPTIONS=--max_old_space_size=4096 storybook build --quiet && npx http-server storybook-static --port 6007 --silent\" \"wait-on tcp:6007 && test-storybook --url http://localhost:6007\"",
    "ci:vrt": "reg-suit run",
    "ci:storycap": "storycap --serverTimeout 100000 --captureTimeout 30000 --serverCmd 'npx http-server storybook-static --ci --port 6007' http://localhost:6007"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^4.1.0",
    "unplugin-vue-define-options": "^1.1.1",
    "@storybook/vue3": "^7.0.0-rc.9",
    "@storybook/vue3-vite": "^7.0.0-rc.9",
    "vue-tsc": "^1.0.9"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/wizleap-inc/wiz-ui.git"
  },
  "license": "CC-BY-NC-SA-4.0",
  "author": "Wizleap Inc.",
  "files": [
    "dist"
  ],
  "main": "./dist/wiz-ui.umd.js",
  "module": "./dist/wiz-ui.es.js",
  "types": "./dist/index.d.ts",
  "dependencies": {
    "@wizleap-inc/wiz-ui-constants": "*",
    "@wizleap-inc/wiz-ui-styles": "*",
    "@wizleap-inc/wiz-ui-utils": "*",
    "vue": "^3.2.45",
    "vue-router": "^4.1.6"
  }
}
